<div class="tab-equipment">
    <div class="flex flex-center">
        <div class="strain-capacity panel">
            <label class="medium-header">Strain Capacity <i class="fas fa-weight-hanging fa-lg"></i></label>
            <div class="flex-col">
                <div class="unlabeled-input">
                    <input type="text"
                        title="Strain Capacity: {{actor.strainCapacity}}; Maximum Capacity: {{actor.maximumCapacity}}"
                        value="{{actor.weight}}/{{actor.heavyLoad}} Kgrs" disabled />
                </div>
            </div>
        </div>
        <div class="credits panel">
            <label class="medium-header">Credits
                <i class="fas fa-coins"></i>
            </label>
            <div class="flex-col">
                <div class="unlabeled-input">
                    <input type="number" name="system.credits" value="{{actor.credits}}">
                </div>
            </div>
        </div>
    </div>
    <div class="flex flex-end">
        <div class="flex flex-between">
            <a data-action="compendium" data-type="Item" data-pack="swse.templates" data-action-target="swse.templates"
                title="Templates"><i class="fas fa-folder-plus fa-lg"></i></a>
        </div>
    </div>
    <div class="equipament-grid grid grid-2col">
        {{#each equipment as |category key|}}
        <div class="{{key}} panel">
            <div class="flex flex-between">
                <label class="medium-header">{{category.label}}</label>
                <div class="headers-buttons flex-row flex-between padding-3">
                    <a class="fas fa-circle-plus" data-action="create" data-action-type="{{category.itemType}}"
                        title="Create New {{category.label}}"></a>
                    <a data-action="compendium" data-type="Item" data-pack="{{category.compendium}}"
                        data-action-target="{{category.compendium}}" title="{{category.label}}"><i
                            class="fas fa-folder-plus"></i></a>
                </div>
            </div>
            <table class="equipment-table resource-table">
                {{#each category.items as |item|}}
                <tbody>
                    <tr class="row-attribute-table item" data-item-id="{{item.id}}">
                        <td class="label-cell">
                            <div class="flex-label">
                                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
                                <label class="item-name">
                                    {{item.name}}
                                </label>
                            </div>
                        </td>
                        <td>
                            <div class="quantity-flex">
                                <a data-action="decrease-quantity" class="item-control" title="Decrease Quantity"><i
                                        class="fas fa-minus fa-sm"></i></a>
                                <div class="unlabeled-input">
                                    <input class="input" type="text" value="{{item.system.quantity}}" placeholder="0"
                                        disabled />
                                </div>
                                <a data-action="increase-quantity" class="item-control" title="Increase Quantity"><i
                                        class="fas fa-plus fa-sm"></i></a>
                            </div>
                        </td>
                        <td class="item-controls">
                            <div class="flex-controls">
                                <a data-action="equip-toggle" class="item-control {{ifThen item.system.equipped "
                                    equiped" "" }}" title=""><i class="fa-solid fa-shield fa-sm"></i></a>
                                <a data-action="view" class="item-control" title="Edit Item"><i
                                        class="fas fa-edit fa-sm"></i></a>
                                <a class="item-control item-delete" title="Delete Item"><i
                                        class="fas fa-trash fa-sm"></i></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
        </div>
        {{/each}}
    </div>
</div>