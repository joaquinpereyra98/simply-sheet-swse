<div class="traits panel">
    <div class="flex-col">
        <div>
            <button class="flex-0" style="flex-basis:180px" data-action="gm-bonus">Add GM Bonus</button>
        </div>
        <div class="flex flex-between">
            <label class="medium-header padding-3">Traits</label>
            <div class="headers-buttons flex-row flex-between padding-3">
                <a data-action="compendium" data-type="Item" data-filter="-type:traits" title="Open Compendium"><i class="fas fa-folder-plus"></i></a>
            </div>
        </div>
        <table class="traits-table resource-table">
            {{#each actor.traits as |item id|}}
            <tbody>
                <tr class="row-attribute-table item" data-item-id="{{item.id}}">
                    <td class="label-item">
                        <div class="flex-label">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
                            <label class="item-name">{{item.name}}</label>
                        </div>
                    </td>
                    <td class="item-controls">
                        <div class="flex-controls">
                            <a data-action="view" class="item-control" title="Edit Item"><i class="fas fa-edit"></i></a>
                            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
</div>