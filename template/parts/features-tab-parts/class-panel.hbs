<div class="class panel">
    <div class="flex-col">
        <div class="flex flex-between">
            <label class="medium-header padding-3">Class</label>
            <div class="headers-buttons flex-row flex-between padding-3">
                <a data-action="compendium" data-type="Item" data-filter="-type:class" title="Open Compendium"><i class="fas fa-folder-plus"></i></a>
            </div>
        </div>
        <table class="class-table resource-table">
            {{#each actor.classes as |class id|}}
            <tbody>
                <tr class="row-attribute-table item" data-item-id="{{class.id}}">
                    <td class="label-item">
                        <div class="flex-label">
                            <img src="{{class.img}}" title="{{class.name}}" width="24" height="24"
                                alt="{{class.name}}" />
                            <label class="item-name">{{class.name}}</label>
                        </div>

                    </td>
                    <td class="hp-class">
                        <span class="text-box {{#if class.canRerollHealth}}item-action short{{/if}} center"
                            data-action="update-level-attribute" data-item="{{class.id}}" data-attribute="rolledHp"
                            data-level="{{sum id 1}}" data-dtype="Number">{{class.classLevelHealth}}</span>
                        {{#if class.canRerollHealth}}
                        <a class="rollable" title="Re-roll {{class.levelUpHitPoints}}" data-item="{{class.id}}"
                            data-item-attribute="rolledHp" data-level="{{sum id 1}}"
                            data-roll="{{class.levelUpHitPoints}}"><i class="fas fa-dice"></i>
                        </a>
                        {{/if}}
                    </td>
                    <td class="item-controls">
                        <div class="flex-controls">
                            <a data-action="view" class="item-control" title="View Class Description"><i
                                    class="fas fa-edit"></i></a>
                            <a class="item-control item-duplicate" title="Copy Class"><i class="fas fa-plus"></i></a>
                            {{#if class.isLatest}}
                            <a data-action="remove-class-level" title="Delete Class"><i
                                    class="fas fa-trash"></i></a>{{/if}}
                        </div>
                    </td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
</div>