<div class="tab-settings flex">
    {{#each actor.system.settings as |setting id|}}
    <div class="panel">
        <label class="medium-header">{{setting.label}}</label>
        {{#ifEquals setting.type "boolean"}}
        <input type="checkbox" name="{{setting.path}}" {{#if setting.value}}checked{{/if}}>
        {{/ifEquals}}
        {{#ifEquals setting.type "select"}}
        <select name="{{setting.path}}">
            {{{options setting.options selected=setting.value}}}
        </select>
        {{/ifEquals}}
    </div>
    {{/each}}
</div>